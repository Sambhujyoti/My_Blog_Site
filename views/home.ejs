<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= para1 %></p>

<% posts.forEach((post) => { %>
    <div>
        <h1><%= post.title %></h1>
    </div>
    <div>
        <% if (post.content.length > 100) { %>
            <p><%= post.content.substring(0, 100) + " ..." %></p>
            <% } else { %>
            <p><%= post.content %></p>
        <% } %>
    </div>
<% }); %>

<%- include('partials/footer'); -%>